import { useState } from 'react';
import { View, Text, TextInput, TouchableOpacity, ScrollView, Alert, ActivityIndicator, KeyboardAvoidingView, Platform } from 'react-native';
import { Link, useRouter } from 'expo-router';
import { authService } from '@/services/auth.service';
import { UserRole } from '@/lib/types';
import { logger } from '@/lib/debug';

export default function SignInScreen() {
  const router = useRouter();
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [role, setRole] = useState<UserRole>('candidate');
  const [loading, setLoading] = useState(false);

  const handleSignIn = async () => {
    logger.info('Auth', 'Sign in attempt', { email, role });

    // Validation
    if (!email || !password) {
      Alert.alert('Error', 'Please fill in all fields');
      logger.warn('Auth', 'Sign in validation failed: empty fields');
      return;
    }

    if (!email.includes('@')) {
      Alert.alert('Error', 'Please enter a valid email address');
      logger.warn('Auth', 'Sign in validation failed: invalid email');
      return;
    }

    setLoading(true);
    logger.debug('Auth', 'Calling authService.signIn');

    const { error } = await authService.signIn(email, password);
    
    setLoading(false);

    if (error) {
      logger.error('Auth', 'Sign in failed', error);
      Alert.alert('Sign In Failed', error.message || 'Invalid credentials');
      return;
    }

    logger.success('Auth', 'Sign in successful', { email, role });
    // Navigation handled by _layout.tsx
  };

  return (
    <KeyboardAvoidingView 
      behavior={Platform.OS === 'ios' ? 'padding' : 'height'}
      className="flex-1 bg-white"
    >
      <ScrollView 
        className="flex-1"
        contentContainerStyle={{ flexGrow: 1 }}
        keyboardShouldPersistTaps="handled"
      >
        <View className="flex-1 justify-center px-8 py-12">
          {/* Header */}
          <View className="mb-12">
            <Text className="text-4xl font-bold text-gray-900 mb-2">Welcome Back</Text>
            <Text className="text-lg text-gray-600">Sign in to continue your journey</Text>
          </View>

          {/* Role Selection */}
          <View className="mb-8">
            <Text className="text-sm font-semibold text-gray-700 mb-4 uppercase tracking-wide">Select Your Role</Text>
            <View className="flex-row space-x-3">
              <TouchableOpacity
                onPress={() => {
                  setRole('candidate');
                  logger.debug('Auth', 'Role changed to candidate');
                }}
                className={`flex-1 py-4 px-4 rounded-xl border-2 ${
                  role === 'candidate'
                    ? 'bg-blue-50 border-blue-600'
                    : 'bg-gray-50 border-gray-200'
                }`}
              >
                <Text
                  className={`text-center font-bold text-base ${
                    role === 'candidate' ? 'text-blue-600' : 'text-gray-600'
                  }`}
                >
                  Candidate
                </Text>
              </TouchableOpacity>

              <TouchableOpacity
                onPress={() => {
                  setRole('mentor');
                  logger.debug('Auth', 'Role changed to mentor');
                }}
                className={`flex-1 py-4 px-4 rounded-xl border-2 ${
                  role === 'mentor'
                    ? 'bg-blue-50 border-blue-600'
                    : 'bg-gray-50 border-gray-200'
                }`}
              >
                <Text
                  className={`text-center font-bold text-base ${
                    role === 'mentor' ? 'text-blue-600' : 'text-gray-600'
                  }`}
                >
                  Mentor
                </Text>
              </TouchableOpacity>

              <TouchableOpacity
                onPress={() => {
                  setRole('admin');
                  logger.debug('Auth', 'Role changed to admin');
                }}
                className={`flex-1 py-4 px-4 rounded-xl border-2 ${
                  role === 'admin'
                    ? 'bg-blue-50 border-blue-600'
                    : 'bg-gray-50 border-gray-200'
                }`}
              >
                <Text
                  className={`text-center font-bold text-base ${
                    role === 'admin' ? 'text-blue-600' : 'text-gray-600'
                  }`}
                >
                  Admin
                </Text>
              </TouchableOpacity>
            </View>
          </View>

          {/* Email Input */}
          <View className="mb-5">
            <Text className="text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wide">Email Address</Text>
            <TextInput
              className="w-full px-5 py-4 border border-gray-300 rounded-xl bg-white text-base"
              placeholder="your.email@example.com"
              placeholderTextColor="#9ca3af"
              value={email}
              onChangeText={setEmail}
              keyboardType="email-address"
              autoCapitalize="none"
              autoComplete="email"
              editable={!loading}
            />
          </View>

          {/* Password Input */}
          <View className="mb-8">
            <Text className="text-sm font-semibold text-gray-700 mb-2 uppercase tracking-wide">Password</Text>
            <TextInput
              className="w-full px-5 py-4 border border-gray-300 rounded-xl bg-white text-base"
              placeholder="Enter your password"
              placeholderTextColor="#9ca3af"
              value={password}
              onChangeText={setPassword}
              secureTextEntry
              autoCapitalize="none"
              editable={!loading}
            />
          </View>

          {/* Sign In Button */}
          <TouchableOpacity
            onPress={handleSignIn}
            disabled={loading}
            className={`w-full py-5 rounded-xl mb-6 ${
              loading ? 'bg-blue-400' : 'bg-blue-600'
            }`}
            style={{ elevation: loading ? 0 : 2, shadowColor: '#2563eb', shadowOffset: { width: 0, height: 4 }, shadowOpacity: 0.3, shadowRadius: 4 }}
          >
            {loading ? (
              <ActivityIndicator color="white" />
            ) : (
              <Text className="text-white text-center text-lg font-bold">
                Sign In
              </Text>
            )}
          </TouchableOpacity>

          {/* Sign Up Link */}
          <View className="flex-row justify-center items-center mb-4">
            <Text className="text-gray-600 text-base">Don't have an account? </Text>
            <Link href="/auth/sign-up" asChild>
              <TouchableOpacity disabled={loading}>
                <Text className="text-blue-600 font-bold text-base">Sign Up</Text>
              </TouchableOpacity>
            </Link>
          </View>

          {/* Forgot Password */}
          <TouchableOpacity className="mt-2" disabled={loading}>
            <Text className="text-blue-600 text-center text-base">Forgot Password?</Text>
          </TouchableOpacity>

          {/* Debug Mode Indicator */}
          {__DEV__ && (
            <View className="mt-8 p-4 bg-yellow-50 rounded-lg border border-yellow-200">
              <Text className="text-yellow-800 text-xs font-semibold mb-1">ðŸ”§ DEBUG MODE</Text>
              <Text className="text-yellow-700 text-xs">
                Quick test: candidate@test.com / test123
              </Text>
            </View>
          )}
        </View>
      </ScrollView>
    </KeyboardAvoidingView>
  );
}
